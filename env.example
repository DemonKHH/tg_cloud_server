# TG Cloud Server 环境变量配置示例
# 复制此文件为 .env 并填入实际配置值

# ======================================
# 应用配置
# ======================================
APP_ENV=development
APP_NAME=tg_cloud_server
APP_VERSION=1.0.0
CONFIG_PATH=configs/config.yaml

# ======================================
# 服务端口配置
# ======================================
WEB_API_PORT=8080
TG_MANAGER_PORT=8081
TASK_SCHEDULER_PORT=8082
AI_SERVICE_PORT=8083

# ======================================
# 数据库配置
# ======================================
# MySQL配置
DB_HOST=localhost
DB_PORT=3306
DB_NAME=tg_manager
DB_USER=tg_user
DB_PASSWORD=your_db_password
DB_ROOT_PASSWORD=your_root_password

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0

# ======================================
# Telegram配置
# ======================================
# 从 https://my.telegram.org/apps 获取
TG_API_ID=12345
TG_API_HASH=your_api_hash_here

# ======================================
# AI服务配置
# ======================================
# OpenAI配置
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo

# ======================================
# JWT配置
# ======================================
JWT_SECRET_KEY=your_jwt_secret_key_here_make_it_long_and_random
JWT_EXPIRATION_TIME=24h

# ======================================
# 风控配置
# ======================================
RISK_CONTROL_ENABLED=true
RISK_CHECK_INTERVAL=1m
RISK_MAX_FAILURES=3
RISK_COOLDOWN_DURATION=30m

# ======================================
# 日志配置
# ======================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout

# ======================================
# 监控配置
# ======================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_PASSWORD=admin123
